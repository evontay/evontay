
{{#if item.isEven }}
  <!-- LAYOUT A: IMAGE COMES BEFORE -->
  <div class="proj-item">

    <div class="proj-img">
      <img src="{{item.image}}"/>
    </div>

    <div class="proj-info">
      <div class="st"></div>
      <h2 class="bold2">{{item.title}}</h2>
      <p class="serif"><{{item.description}}</p>
      <div class="proj-btn-grp">
        <a class="proj-btn" href="{{item.github}}">Github</a>
        <a class="proj-btn" href="{{item.website}}">Launch</a>
      </div>
    </div>
  </div>

{{else}}
  <!-- LAYOUT B: IMAGE COMES AFTER -->
  <div class="proj-item">

    <div class="proj-info">
      <div class="st"></div>
      <h3 class="bold2">{{item.title}}</h3>
      <p class="serif"><{{item.description}}</p>
      <div class="proj-btn-grp">
        <a class="proj-btn" href="{{item.github}}">Github</a>
        <a class="proj-btn" href="{{item.website}}">Launch</a>
      </div>
    </div>

    <div class="proj-img">
      <img src="{{item.image}}"/>
    </div>
  </div>
{{/if}}
